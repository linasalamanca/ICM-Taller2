<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamaraActivity">

    <TextView
        android:id="@+id/textoTituloCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige de dónde quieres la imagen"
        android:textSize="20sp"
        android:layout_above="@+id/imagenCargada"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/imagenCargada"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnCamara"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Tomar foto"
        android:layout_below="@+id/imagenCargada"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Galería"
        android:layout_below="@+id/imagenCargada"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="15dp"/>
</RelativeLayout>